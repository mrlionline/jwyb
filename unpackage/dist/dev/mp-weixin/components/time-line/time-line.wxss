.time-line-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
}
.time-line-item .time {
  width: 88rpx;
  color: #567DF4;
}
.time-line-item .dot {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 24px;
  height: 24px;
  padding: 4px;
}
.time-line-item .dot image {
  max-width: 100%;
  max-height: 100%;
}
.time-line-item .content-wrap {
  width: calc(100% - 88rpx - 24px);
}
.time-line-item .content-wrap .title {
  padding-left: 10px;
  line-height: 24px;
  font-size: 15px;
  color: #444251;
}
.time-line-item .content-wrap .content {
  max-width: calc(100% + 12px);
  min-height: 130rpx;
  padding-left: 20px;
  margin-left: -12px;
  border-left: 1px solid #BECEFF;
  overflow: hidden;
}
.time-line-item .content-wrap .content.no-border-left {
  border-left: 0;
}
.time-line-item .content-wrap .content .desc {
  line-height: 18px;
  font-size: 13px;
  color: #959BA4;
}
.time-line-item .content-wrap .content .image {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  width: 216rpx;
  height: 216rpx;
  padding: 30rpx;
}
.time-line-item .content-wrap .content .image image {
  max-width: 100%;
  max-height: 100%;
}
.theme-dark .time-line-item .time {
  color: #FFE164;
}
.theme-dark .time-line-item .content-wrap .title,
.theme-dark .time-line-item .content-wrap .content .desc {
  color: #FFFFFF;
}
.theme-dark .time-line-item .content-wrap .content .image {
  background: rgba(118, 152, 255, 0.1);
  box-shadow: 0 2px 10px 0 rgba(17, 5, 116, 0.4);
  border-radius: 8px;
  border: 1px solid #BEE9FF;
}

