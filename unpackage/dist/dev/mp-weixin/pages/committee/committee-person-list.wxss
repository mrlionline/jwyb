.container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: calc(100vh - 25px - 44px);
  background: #F5F6F7;
  z-index: 1;
  overflow-y: auto;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
}
.tabs {
  display: flex;
  justify-content: space-between;
  padding: 24px;
}
.tabs .tab-item {
  width: 304rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  border-radius: 8px;
  background-color: #DDE2EF;
  color: #444251;
  transition: .3s;
}
.tabs .tab-item-active {
  background-color: #567DF4;
  color: #FFFFFF;
}
.position-item {
  padding: 24px;
  margin-bottom: 16px;
  background-color: #FFFFFF;
}
.position-item:last-child {
  margin: 0;
}
.position-item .pi-title {
  height: 16px;
  line-height: 16px;
  padding-left: 8px;
  color: #444251;
  font-size: 13px;
  border-left: 2px solid #567DF4;
}
.position-item .member-box {
  padding: 0 16px;
  border: 1px solid #D7D9DB;
  border-radius: 8px;
  margin-top: 8px;
}
.position-item .member-item {
  position: relative;
  display: flex;
  width: 100%;
  padding: 16px 0;
  border-bottom: 1px dashed #D7D9DB;
}
.position-item .member-item:last-child {
  border: 0;
}
.position-item .member-item .memeber-head {
  border-radius: 5px;
  width: 128rpx;
  height: 128rpx;
  margin-right: 16px;
}
.position-item .member-item .member-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 128rpx;
  color: #444251;
}
.position-item .member-item .member-start-level {
  position: absolute;
  top: 16px;
  right: 0;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #FDF1E8;
  border-radius: 12px;
  color: #F2731E;
  font-size: 12px;
}
.star-group .group-item {
  width: 654rpx;
  margin: 0 auto 32rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.05);
  border-radius: 8px;
}
.star-group .group-item .group-info {
  position: relative;
  display: flex;
  align-items: flex-start;
  padding: 48rpx 32rpx;
}
.star-group .group-item .group-info .group-logo {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background-color: #F0F3FE;
  padding: 16rpx;
  margin-right: 32rpx;
}
.star-group .group-item .group-info .group-logo image {
  max-width: 100%;
  max-height: 100%;
}
.star-group .group-item .group-info .group-info-content {
  width: calc(100% - 160rpx);
}
.star-group .group-item .group-info .group-info-content .gi-name {
  line-height: 21px;
  font-size: 15px;
  color: #444251;
}
.star-group .group-item .group-info .group-info-content .gi-leader {
  line-height: 18px;
  font-size: 13px;
  color: #444251;
  margin: 8px 0 4px;
}
.star-group .group-item .group-info .group-info-content .gi-member {
  line-height: 18px;
  font-size: 13px;
  color: #444251;
}
.star-group .group-item .group-info .gi-arrow {
  position: absolute;
  right: 32rpx;
  top: 48rpx;
  transition: .3s;
  -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
}
.star-group .group-item.group-item-open .gi-arrow {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.star-group .group-item .member-list {
  margin: 0 32rpx;
  border: 0;
  padding: 0;
  height: 0;
  overflow: hidden;
  transition: .3s;
}
.star-group .group-item .member-list.member-list-show {
  height: auto;
  padding: 30rpx 0 48rpx;
  border-top: 1px dashed #D7D9DB;
}
.star-group .group-item .member-list .member-item {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 32rpx;
  background: #F5F6F7;
  border-radius: 8px;
  font-size: 15px;
  color: #959BA4;
  margin-bottom: 16rpx;
}
.star-group .group-item .member-list .member-item .member-position {
  display: inline-block;
  width: 140rpx;
}
.star-group .group-item .member-list .member-item .member-item-arrow {
  position: absolute;
  right: 26rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}

